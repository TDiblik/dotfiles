// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "collaboration_panel": {
    "button": true,
  },
  "notification_panel": {
    "button": false,
  },
  "outline_panel": {
    "button": true,
  },
  "tabs": {
    "close_position": "left",
    "file_icons": false,
    "git_status": false,
  },
  "tab_bar": {
    "show_nav_history_buttons": true,
    "show": true,
  },
  "title_bar": {
    "show_sign_in": true,
    "show_user_picture": false,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_branch_name": true,
  },
  "debugger": {
    "button": false,
  },
  "search": {
    "button": true,
  },
  "terminal": {
    "button": false,
  },
  "status_bar": {
    "cursor_position_button": false,
    "active_language_button": true,
  },
  "icon_theme": "Material Icon Theme",
  "agent": {
    "button": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash",
    },
    "model_parameters": [],
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "ui_font_size": 12,
  "buffer_font_size": 10,
  "buffer_font_family": "Menlo",
  "buffer_line_height": "standard",
  "buffer_font_weight": 200,
  "telemetry": {
    "metrics": false,
    "diagnostics": false,
  },
  "project_panel": {
    "button": true,
    "dock": "right",
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "VSCode Dark Polished",
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
  },
  "git_panel": {
    "button": true,
    "dock": "right",
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
  },
  "tab_size": 2,
  "vim": {
    "use_system_clipboard": "always",
    "custom_digraphs": {},
  },
  "features": {
    "edit_prediction_provider": "none",
  },
  "git": {
    "git_gutter": null,
    "gutter_debounce": null,
    "inline_blame": {
      "enabled": false,
    },
    "hunk_style": null,
  },
  "file_types": {
    "Dockerfile": ["Dockerfile.*"],
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true,
      },
    },
  },
}
